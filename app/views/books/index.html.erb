<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show" ,book_path(book.id) %></td>
        <td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy" , book_path(book.id) , method: :delete , data: {confirm: "本当に?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create Book" %>
  </div>

<% end %>