<h1>Editing Book</h1>
<%= form_with model: @book ,method: :patch do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
  
<% end %>
  
<%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>